<?xml version="1.0"?>
    <page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
        <body>
            <move element="authorization-link-login" destination="header-wrapper" before="-"/>
            <move element="register-link" destination="header-wrapper" before="-"/> 
            <referenceContainer name="footer_links" remove="true" />

            <block class="Magento\Customer\Block\Account\RegisterLink" name="register-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">REGISTER</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\RegisterLink" name="authorization-link-login">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">LOGIN</argument>
                </arguments>
            </block>
        </body>
    </page>